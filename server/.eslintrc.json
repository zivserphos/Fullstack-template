{
    "env": {
        "ES6": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base" , 
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": ["warn", { "code": 80 }],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],     
        "import/extensions": [     
            "error",
            "ignorePackages",
            {
            "ts": "never"
            }
            ],
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"]
    }, 
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
